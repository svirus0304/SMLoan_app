<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sumer.loan.smloan.Act_main"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="총몇차?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_cnt_txtv"
        android:layout_weight="0.14"
        android:textSize="30sp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_cnt_numpicker"
        android:layout_weight="0.14"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="20dip"
        android:orientation="horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.14" />

    <TextView
        android:text="참석자(띄어쓰기로 구분)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_mem_txtv"
        android:layout_weight="0.14"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:text="예)슬메 지혜 시칸"
        android:ems="10"
        android:id="@+id/main_mem_txt"
        android:layout_weight="0.14"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_weight="1.28"
        android:layout_height="100dp" />

    <Button
        android:text="확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_btn_ok"
        android:layout_weight="0.14" />
</LinearLayout>
